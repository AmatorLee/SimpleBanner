<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="SimpleBanner">
        <attr name="indicator_selected_color" format="color"/>
        <attr name="indicator_unselected_color" format="color"/>
        <attr name="indicator_count" format="integer"/>
        <attr name="indicator_width" format="dimension"/>
        <attr name="indicator_height" format="dimension"/>
        <attr name="isShowBannerTips" format="boolean"/>
        <attr name="isShowBannerIndicator" format="boolean"/>
        <attr name="indicator_shape" format="enum">
            <enum name="oval" value="0"/>
            <enum name="rect" value="1"/>
        </attr>
        <attr name="indicator_position" format="enum">
            <enum name="left" value="0"/>
            <enum name="right" value="2"/>
            <enum name="center" value="1"/>
        </attr>

        <attr name="indicator_margin" format="dimension"/>
        <attr name="indicator_padding" format="dimension"/>
        <attr name="isShowBannerContainerAnimate" format="boolean"/>
    </declare-styleable>


</resources>